<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="Focusly.Views.TimerPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <VerticalStackLayout
        Padding="20"
        BackgroundColor="White"
        WidthRequest="300">
        <DatePicker Date="{Binding SelectedDateTime, Mode=TwoWay}" />
        <TimePicker Time="{Binding SelectedDateTime, Mode=TwoWay}" />
        <Button Command="{Binding SetTimerCommand}" Text="Save Timer" />
        <Button Clicked="ClosePopup" Text="Close" />
    </VerticalStackLayout>
</toolkit:Popup>